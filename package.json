{
  "name": "textlint-rule-ja-no-mixed-period",
  "repository": {
    "type": "git",
    "url": "https://github.com/textlint-ja/textlint-rule-ja-no-mixed-period.git"
  },
  "author": "azu",
  "email": "azuciao@gmail.com",
  "homepage": "https://github.com/textlint-ja/textlint-rule-ja-no-mixed-period",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/textlint-ja/textlint-rule-ja-no-mixed-period/issues"
  },
  "files": [
    "src/",
    "lib/"
  ],
  "version": "2.1.3",
  "description": "文末の句点(。)の統一 OR 抜けをチェックするtextlintルール",
  "main": "lib/textlint-rule-ja-no-mixed-period.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "textlint-scripts test",
    "build": "textlint-scripts build",
    "watch": "textlint-scripts build --watch",
    "prepublish": "npm run --if-present build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "git config --local core.hooksPath .githooks"
  },
  "keywords": [
    "textlint",
    "textlintrule"
  ],
  "devDependencies": {
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "textlint-plugin-review": "^0.4.1",
    "textlint-scripts": "^12.2.4",
    "textlint-tester": "^12.2.4"
  },
  "dependencies": {
    "check-ends-with-period": "^1.0.1",
    "textlint-rule-helper": "^2.2.3"
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  }
}
